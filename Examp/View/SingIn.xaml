<Window x:Class="Examp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examp"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="Вход" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="50" Text="Login :" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock FontSize="50" Text="Password :" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="log" Margin="15"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" FontSize="30"/>
        <PasswordBox x:Name="pass" Margin="15"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" FontSize="30"/>
        <Button Grid.Column="0" Grid.Row="2" 
               Margin="50 20" Grid.ColumnSpan="2" Content="Sing IN" Click="Button_Click"/>
    </Grid>
</Window>
